@model OperatorManagementBL.DTOs.UserLoginDTO

@{
    ViewBag.Title = "ورود";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card shadow-5-strong mt-5 col-5 mx-auto">
    <div class="card-body py-2">

        <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
                <h2 class="fw-bold mb-5">ورود به پنل</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.Username)
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "form-text text-danger" })
                    </div>

                    <div class="form-floating">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "form-text text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mb-4 mt-2">
                        ورود
                    </button>
                }
            </div>
        </div>
    </div>
</div>