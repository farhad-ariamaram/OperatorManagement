@model IEnumerable<OperatorManagementBL.DTOs.SimDTO>

@{
    ViewBag.Title = "Deleted Sims";
}

<h2>مدیریت سیم‌کارت های حذف شده</h2>

<p>
    <a href="@Url.Action("Index")" class="btn btn-info text-white">بازگشت به لیست</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.ActionLink("لغو حذف", "UnDelete", new { id = item.Id }, new { @class = "btn btn-danger text-white" })
            </td>
        </tr>
    }

</table>
