@model OperatorManagementBL.DTOs.PersonDetailDTO

@{
    ViewBag.Title = "مشاهده اطلاعات شخص";
}

<h2>مشاهده اطلاعات شخص</h2>
<hr />
<dl class="row mt-4">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FirstName)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LastName)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NationCode)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.NationCode)</dd>

    @if (Model.SimCards.Any())
    {
        <dt>لیست سیم کارت ها</dt>
        <dd class="col-sm-9"></dd>
        foreach (var item in Model.SimCards)
        {
            <dt></dt>
            <dd class="col-sm-9">@item.Number</dd>
        }
    }
    else
    {
        <dt>لیست سیم کارت ها</dt>
        <dd class="col-sm-9">سیمکارتی با مالکیت این شخص وجود ندارد</dd>
    }
</dl>

<div class="mt-3">
    @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-info text-white" })
    @Html.ActionLink("ویرایش", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning text-white mx-2" })
</div>


